@model List<EFDbFirstApprochExample.Models.Product>
@{
    
}

<div class="card-group">
    @foreach(var item in Model)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@item.ProductName</h5>
                <p class="card-text">@item.Price</p>
                <p class="card-text"><small class="text-muted">@item.Brand.BrandName</small></p>
                <p class="card-text"><small class="text-muted">@item.Category.CategoryName</small></p>
            </div>
        </div>
    }
</div>